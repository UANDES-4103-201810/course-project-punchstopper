<!DOCTYPE html>
<html>
  <head>
    <title>PunchStopper</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <h1  align="center">
    <%= image_tag("logos/logo.png", size: "200x35", alt: "Edit Entry")%>
    </h1>
    
    <p style="font-style: italic" align="center">Where the Punches stop, and the Kicks start!</p>
  </head>

  <body>
	<p class="alert"><%= alert %></p>
      <nav class="navbar navbar-inverse">
		  <div class="container-fluid">
			  <ul class="nav navbar-nav">
                           <li><%= link_to "Home", root_path %></li>
			   <li><%= link_to "All Projects", projects_path %></li>
                          </ul>
                          <ul class="nav navbar-nav navbar-right">
			   <% if current_user.present? %>
                                <% if current_user.role %>
		                    <li><%= link_to "Management", admin_path %></li>
		                <% end %>
				<li><%= link_to "My Projects", projects_path(my_projects: true) %></li>
        <li><%= link_to "Pending Funds", pending_funds_path %></li>
				<li><%= link_to "Wishlist", user_wishlists_path %></li>
				<li><%= link_to "Profile", current_user %></li>
		                <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></li>
			   <% else %>
			       <li><%= link_to "Sign In", new_user_session_path %></li>
                           <% end %>
			  </ul>
		  </div>
		</nav>
    <%= yield %>
  </body>
</html>
